<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabIndicatorColor="@android:color/holo_purple"
            app:tabSelectedTextColor="@android:color/holo_purple"
            app:tabMode="fixed"
            app:tabGravity="fill"
            app:tabTextColor="@android:color/darker_gray" >

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tabItemAlta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/alta"
                android:visibility="visible" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tabItemModificar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/MODIFICAR"
                android:visibility="visible" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tabItemListado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/LISTADO"
                android:visibility="visible" />
        </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>
